.row-fluid
  .span12
    .content
      .actions
        = link_to "Create Match", new_match_path, class: 'btn btn-primary'

      .something
        %table.table
          %tr
            %th Match Name
            %th Teams
            %th Duration(S)
            %th Actions
          - @matches.each do |match|
            %tr
              %td= match.name
              %td
                %strong #{match.team_1.name}
                vs
                %strong #{match.team_2.name}
              %td= display_duration(match.duration.to_i)

              %td= link_to "Edit Roster", edit_roster_match_path(match)

