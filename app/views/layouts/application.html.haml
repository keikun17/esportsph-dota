%html
  %head
    %title EsportsphDota
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags

  -# TODO: body class that has padding 60 or find proper way of spacing this
  %body{style: 'padding-top: 60px'}
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          = link_to "DOTA2PH",root_url, class: 'brand'

          .nav-collapse
            %ul.nav
              %li= link_to "Vs Select", vs_select_path
              %li= link_to "Matches", matches_path
              %li= link_to "Teams", teams_path
            %ul.nav.pull-right
              %li
                %a
                  %span.label.label-important Log Out
    .container-fluid
      = yield
